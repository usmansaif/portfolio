.project-card(data-category="web")
    .project-header
        .d-flex.justify-content-between.align-items-start.flex-wrap
            .project-title-section
                .project-badges.mb-2
                    span.badge.badge-category.bg-primary
                        i.fas.fa-globe.me-1
                        | SaaS Platform
                    span.badge.badge-industry.bg-danger
                        i.fas.fa-file-medical.me-1
                        | Healthcare Luxembourg
                    span.badge.badge-confidential
                        i.fas.fa-shield-virus.me-1
                        | HIPAA Compliant
                h3.project-name.mb-2 MedLucy â€“ Advanced Healthcare Management SaaS
                .project-meta
                    span.project-location
                        i.fas.fa-map-marker-alt.me-2
                        | Luxembourg, Europe
                    span.project-client.ms-3
                        i.fas.fa-hospital.me-2
                        | Healthcare Professionals
            .project-expand
                button.btn.btn-expand(type="button" data-bs-toggle="collapse" data-bs-target="#medlucy-body" aria-expanded="false" aria-controls="#medlucy-body")
                    span.expand-text View Details
                    i.fas.fa-chevron-down.ms-2

    #medlucy-body.collapse
        .project-body
            // Project Overview
            .project-section.overview-section
                .row
                    .col-md-8
                        h5.section-title
                            i.fas.fa-info-circle.me-2
                            | Project Overview
                        p.project-description A revolutionary healthcare ecosystem for Luxembourg, MedLucy streamlines medical operations for patients, doctors, and secretaries. Features a stunning dashboard designed for maximum efficiency in clinical environments.
                        
                        .project-highlights.mt-4
                            h6.highlights-title
                                i.fas.fa-rocket.me-2
                                | Enterprise Features
                            ul.highlights-list
                                li Intelligent Agenda: Real-time patient tracking and waiting room updates
                                li Visual Timeline: Insightful historical view of patient medical data
                                li Micro-Form Automation: Automated prescription and report generation
                                li Billing System: Minimalist workflow for medical invoicing in Luxembourg
                                li Care Collaboration: Integrated doctor-to-doctor referral system
                    
                    .col-md-4
                        .thumbnail-gallery.d-flex.flex-wrap.gap-2
                            .thumbnail
                                a(href=`/assets/img/portfolio/medlucy-1.webp` rel='noreferrer' target="_blank" class="lightbox")
                                    img(src=`/assets/img/portfolio/thumb/medlucy-1.webp` alt='MedLucy' title='MedLucy' loading='lazy' class="img-fluid rounded")
                            .thumbnail
                                a(href=`/assets/img/portfolio/medlucy-2.webp` rel='noreferrer' target="_blank" class="lightbox")
                                    img(src=`/assets/img/portfolio/thumb/medlucy-2.webp` alt='MedLucy' title='MedLucy' loading='lazy' class="img-fluid rounded")
                            .thumbnail
                                a(href=`/assets/img/portfolio/medlucy-3.webp` rel='noreferrer' target="_blank" class="lightbox")
                                    img(src=`/assets/img/portfolio/thumb/medlucy-3.webp` alt='MedLucy' title='MedLucy' loading='lazy' class="img-fluid rounded")
                            .thumbnail
                                a(href=`/assets/img/portfolio/medlucy-4.webp` rel='noreferrer' target="_blank" class="lightbox")
                                    img(src=`/assets/img/portfolio/thumb/medlucy-4.webp` alt='MedLucy' title='MedLucy' loading='lazy' class="img-fluid rounded")

            // Technical Architecture
            .project-section.tech-section
                h5.section-title
                    i.fas.fa-layer-group.me-2
                    | Tech Stack & Infrastructure
                
                .row
                    .col-md-6
                        .tech-category-card
                            h6
                                i.fas.fa-server.me-2
                                | Backend Architecture
                            .tech-tags
                                span.tech-tag.backend-tag Laravel
                                span.tech-tag.backend-tag PHP 8.x
                                span.tech-tag.backend-tag MySQL
                                span.tech-tag.backend-tag Redis
                    
                    .col-md-6
                        .tech-category-card
                            h6
                                i.fas.fa-desktop.me-2
                                | Frontend Excellence
                            .tech-tags
                                span.tech-tag.frontend-tag Vue.js
                                span.tech-tag.frontend-tag Vuex / Vuetify
                                span.tech-tag.frontend-tag CSS3 / BEM
                                span.tech-tag.tool-tag GitHub Actions

            // Project Footer
            .project-section.timeline-section
                .project-footer
                    .row.align-items-center
                        .col-md-8
                            .achievement-badge
                                i.fas.fa-check-double.me-2
                                | Contributing to the digital transformation of European healthcare services
                        .col-md-4.text-end
                            .project-status.status-active
                                i.fas.fa-laptop-medical.me-2
                                | Live in EU Market

