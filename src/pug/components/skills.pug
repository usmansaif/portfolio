.resume-section-content
    h2.section-heading.mb-5 Technical Expertise

    // Core Tech Stack
    .row.mb-5
        .col-lg-3.col-md-6.mb-4
            .skill-card-modern
                .skill-icon
                    i.fab.fa-php.fa-3x
                h4 Laravel / PHP
                .skill-meta
                    span 8+ Years
                    span.level Expert
                .skill-progress
                    .progress-fill(style="width: 95%")
        
        .col-lg-3.col-md-6.mb-4
            .skill-card-modern
                .skill-icon
                    i.fab.fa-vuejs.fa-3x
                h4 Vue.js
                .skill-meta
                    span 6+ Years
                    span.level Advanced
                .skill-progress
                    .progress-fill(style="width: 92%")
        
        .col-lg-3.col-md-6.mb-4
            .skill-card-modern
                .skill-icon
                    i.fas.fa-database.fa-3x
                h4 MySQL
                .skill-meta
                    span 8+ Years
                    span.level Expert
                .skill-progress
                    .progress-fill(style="width: 90%")
        
        .col-lg-3.col-md-6.mb-4
            .skill-card-modern.ai-variant
                .skill-icon
                    i.fas.fa-brain.fa-3x
                h4.ai-text AI Development
                .skill-meta
                    span 2+ Years
                    span.level Advanced
                .skill-progress
                    .progress-fill.ai-fill(style="width: 85%")

    // Secondary Skills & Workflow
    .row
        .col-md-4.mb-4
            .tech-group-card
                h5.group-title
                    i.fas.fa-code.me-2
                    | Backend & Core
                .tech-tags-list
                    span.t-tag PHP 8.x
                    span.t-tag Laravel 11
                    span.t-tag REST APIs
                    span.t-tag MySQL
                    span.t-tag Redis
                    span.t-tag Queues
                    span.t-tag PHPUnit
        
        .col-md-4.mb-4
            .tech-group-card
                h5.group-title
                    i.fas.fa-palette.me-2
                    | Frontend & UI
                .tech-tags-list
                    span.t-tag Vue.js 3
                    span.t-tag Vuetify
                    span.t-tag JavaScript
                    span.t-tag TypeScript
                    span.t-tag Tailwind CSS
                    span.t-tag HTML5/CSS3
                    span.t-tag Responsive
        
        .col-md-4.mb-4
            .tech-group-card.ai-group
                h5.group-title
                    i.fas.fa-robot.me-2
                    | AI & Automation
                .tech-tags-list
                    span.t-tag OpenAI API
                    span.t-tag Anthropic
                    span.t-tag Agentic AI
                    span.t-tag LangChain
                    span.t-tag Process Automation
                    span.t-tag Python (Basic)

    // Workflow & Tools
    .mt-5
        h4.subheading-modern.mb-4 
            i.fas.fa-tools.me-2
            | Development Workflow & Tools
        
        .workflow-grid
            .workflow-item
                i.fab.fa-github.me-2
                span GitHub/GitLab
            .workflow-item
                i.fas.fa-project-diagram.me-2
                span Jira / Agile
            .workflow-item
                i.fas.fa-terminal.me-2
                span Docker / CI/CD
            .workflow-item
                i.fas.fa-vial.me-2
                span Postman / TDD
            .workflow-item
                i.fas.fa-server.me-2
                span WHM / cPanel
            .workflow-item
                i.fas.fa-laptop-code.me-2
                span PHPStorm / VSCode
            .workflow-item.ai-workflow
                i.fas.fa-rocket.me-2
                span AI-Assisted Dev