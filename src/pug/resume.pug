    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html, body {
        background: #f5f5f5;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: #1a1a1a;
        font-size: 11pt;
        line-height: 1.5;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
      
      .resume-container {
        max-width: 8.5in;
        background: white;
        margin: 0.5in auto;
        padding: 0.6in 0.65in;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
      }
      
      /* Header */
      .resume-header {
        text-align: center;
        margin-bottom: 0.25in;
        padding-bottom: 0.15in;
        border-bottom: 2px solid #2563eb;
      }
      
      .name {
        font-size: 28pt;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.08in;
        letter-spacing: -0.5px;
      }
      
      .title {
        font-size: 13pt;
        color: #2563eb;
        font-weight: 600;
        margin-bottom: 0.1in;
      }
      
      .contact-bar {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.15in;
        font-size: 9.5pt;
        color: #4b5563;
      }
      
      .contact-item {
        display: flex;
        align-items: center;
        gap: 0.04in;
      }
      
      .contact-item::before {
        content: "•";
        margin-right: 0.04in;
      }
      
      .contact-item:first-child::before {
        content: "";
        margin: 0;
      }
      
      /* Sections */
      .section {
        margin-bottom: 0.22in;
      }
      
      .section-title {
        font-size: 12pt;
        font-weight: 700;
        color: #1a1a1a;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.12in;
        padding-bottom: 0.05in;
        border-bottom: 1.5px solid #e5e7eb;
      }
      
      /* Summary */
      .summary-text {
        font-size: 10.5pt;
        line-height: 1.6;
        color: #374151;
        text-align: justify;
      }
      
      /* Core Competencies */
      .competencies-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.08in 0.15in;
        font-size: 10pt;
      }
      
      .competency-item {
        display: flex;
        align-items: center;
        gap: 0.06in;
      }
      
      .competency-item::before {
        content: "▪";
        color: #2563eb;
        font-weight: bold;
      }
      
      /* Experience */
      .experience-item {
        margin-bottom: 0.22in;
      }
      
      .experience-item:last-child {
        margin-bottom: 0;
      }
      
      .experience-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.04in;
      }
      
      .job-title {
        font-size: 11pt;
        font-weight: 700;
        color: #1a1a1a;
      }
      
      .job-date {
        font-size: 9.5pt;
        color: #6b7280;
        font-weight: 500;
      }
      
      .company-location {
        font-size: 10pt;
        color: #4b5563;
        font-style: italic;
        margin-bottom: 0.08in;
      }
      
      .achievements {
        list-style: none;
        padding-left: 0;
      }
      
      .achievements li {
        position: relative;
        padding-left: 0.18in;
        margin-bottom: 0.06in;
        font-size: 10pt;
        line-height: 1.5;
        color: #374151;
      }
      
      .achievements li::before {
        content: "→";
        position: absolute;
        left: 0;
        color: #2563eb;
        font-weight: bold;
      }
      
      /* Skills */
      .skills-grid {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 0.08in 0.15in;
        font-size: 10pt;
      }
      
      .skill-category {
        font-weight: 600;
        color: #1a1a1a;
      }
      
      .skill-items {
        color: #374151;
      }
      
      /* Education */
      .education-item {
        margin-bottom: 0.12in;
      }
      
      .education-item:last-child {
        margin-bottom: 0;
      }
      
      .degree-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
      }
      
      .degree {
        font-size: 10.5pt;
        font-weight: 600;
        color: #1a1a1a;
      }
      
      .edu-date {
        font-size: 9.5pt;
        color: #6b7280;
      }
      
      .institution {
        font-size: 10pt;
        color: #4b5563;
        font-style: italic;
      }
      
      /* Projects */
      .project-item {
        margin-bottom: 0.1in;
      }
      
      .project-item:last-child {
        margin-bottom: 0;
      }
      
      .project-name {
        font-weight: 600;
        color: #1a1a1a;
        font-size: 10pt;
      }
      
      .project-desc {
        font-size: 9.5pt;
        color: #4b5563;
        margin-left: 0.15in;
      }
      
      /* Print Styles */
      @media print {
        body {
          background: white;
        }
        
        .resume-container {
          margin: 0;
          padding: 0.5in 0.6in;
          box-shadow: none;
          max-width: 100%;
        }
        
        .section {
          page-break-inside: avoid;
        }
        
        .experience-item {
          page-break-inside: avoid;
        }
      }
      
      @page {
        size: letter;
        margin: 0;
      }

